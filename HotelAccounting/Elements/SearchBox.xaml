<UserControl x:Class="HotelAccounting.Elements.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelAccounting.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Border x:Name="SearchBorder" Background="#FF1F202A" LostFocus="Border_LostFocus" GotFocus="Border_GotFocus">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="90*"/>
            </Grid.ColumnDefinitions>
            <!--Сюда лупу svg-->
            <Image x:Name="IconSearch" Opacity="0.5" Width="16" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
            <Label x:Name="LblSearchTxt" Background="{x:Null}" Content="Поиск..." Grid.Column="1" Margin="10,0" VerticalContentAlignment="Center" VerticalAlignment="Stretch" FontSize="12" Foreground="#FF9D9D9D"/>
            <TextBox x:Name="SearchItemTxt" Grid.Column="1" FontSize="12" BorderThickness="0" TextWrapping="NoWrap" Margin="10,0" VerticalContentAlignment="Center" VerticalAlignment="Stretch" Foreground="#FF9D9D9D" Background="Transparent"/>
        </Grid>
    </Border>
</UserControl>
